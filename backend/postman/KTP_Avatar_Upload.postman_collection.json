{
  "info": {
    "name": "KTP - Avatar Upload Advanced",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Test avatar upload with Sharp image processing, Cloudinary integration, and validation"
  },
  "item": [
    {
      "name": "1. Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "try {",
              "  const json = pm.response.json();",
              "  if (json.accessToken) pm.collectionVariables.set('accessToken', json.accessToken);",
              "  pm.test('Login OK', () => pm.expect(pm.response.code).to.be.oneOf([200, 201]));",
              "} catch (e) {}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "2. Get Profile (Before Upload)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/profile",
          "host": ["{{baseUrl}}"],
          "path": ["api", "profile"]
        }
      }
    },
    {
      "name": "3. Upload Avatar (Success)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Upload successful', () => {",
              "  pm.expect(pm.response.code).to.equal(200);",
              "  const json = pm.response.json();",
              "  pm.expect(json.data.avatar).to.exist;",
              "  pm.expect(json.data.avatar.url).to.be.a('string');",
              "  pm.expect(json.metadata).to.exist;",
              "  console.log('Avatar URL:', json.data.avatar.url);",
              "  console.log('Compression:', json.metadata.compression);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "avatar",
              "type": "file",
              "src": "/path/to/your/test-image.jpg",
              "description": "Upload a test image (JPEG, PNG, etc.)"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/profile/avatar",
          "host": ["{{baseUrl}}"],
          "path": ["api", "profile", "avatar"]
        }
      }
    },
    {
      "name": "4. Get Profile (After Upload)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/profile",
          "host": ["{{baseUrl}}"],
          "path": ["api", "profile"]
        }
      }
    },
    {
      "name": "5. Upload Invalid Format (Fail)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Should reject invalid format', () => {",
              "  pm.expect(pm.response.code).to.equal(400);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "avatar",
              "type": "file",
              "src": "/path/to/document.pdf",
              "description": "Try uploading a non-image file (should fail)"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/profile/avatar",
          "host": ["{{baseUrl}}"],
          "path": ["api", "profile", "avatar"]
        }
      }
    },
    {
      "name": "6. Upload Without Auth (Fail)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Should require authentication', () => {",
              "  pm.expect(pm.response.code).to.equal(401);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "avatar",
              "type": "file",
              "src": "/path/to/your/test-image.jpg"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/profile/avatar",
          "host": ["{{baseUrl}}"],
          "path": ["api", "profile", "avatar"]
        }
      }
    },
    {
      "name": "7. Upload Second Avatar (Replace)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Upload replacement avatar', () => {",
              "  pm.expect(pm.response.code).to.equal(200);",
              "  const json = pm.response.json();",
              "  console.log('New avatar URL:', json.data.avatar.url);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "avatar",
              "type": "file",
              "src": "/path/to/another-image.png",
              "description": "Upload another image to replace existing avatar"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/profile/avatar",
          "host": ["{{baseUrl}}"],
          "path": ["api", "profile", "avatar"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "accessToken", "value": "" }
  ]
}
