{
  "info": {
    "name": "KTP - Refresh Token Flow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Signup",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "try {",
              "  const json = pm.response.json();",
              "  if (json.accessToken) pm.collectionVariables.set('accessToken', json.accessToken);",
              "  if (json.refreshToken) pm.collectionVariables.set('refreshToken', json.refreshToken);",
              "  if (json.user && json.user.email) pm.collectionVariables.set('email', json.user.email);",
              "  pm.test('Signup responded OK', function () { pm.expect(pm.response.code).to.be.oneOf([200, 201]); });",
              "} catch (e) { /* ignore */ }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Student\",\n  \"email\": \"student+{{timestamp}}@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/signup",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "signup"]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Ensure email var exists (fallback)",
              "if (!pm.collectionVariables.get('email')) {",
              "  pm.collectionVariables.set('email', 'student@example.com');",
              "}"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "try {",
              "  const json = pm.response.json();",
              "  if (json.accessToken) pm.collectionVariables.set('accessToken', json.accessToken);",
              "  if (json.refreshToken) pm.collectionVariables.set('refreshToken', json.refreshToken);",
              "  pm.test('Login OK', function () { pm.expect(pm.response.code).to.be.oneOf([200, 201]); });",
              "} catch (e) { /* ignore */ }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "Profile - Get (Protected)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/profile",
          "host": ["{{baseUrl}}"],
          "path": ["api", "profile"]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Refresh",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "try {",
              "  const json = pm.response.json();",
              "  if (json.accessToken) pm.collectionVariables.set('accessToken', json.accessToken);",
              "  pm.test('Refresh OK', function () { pm.expect(pm.response.code).to.be.oneOf([200, 201]); });",
              "} catch (e) { /* ignore */ }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/refresh",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "refresh"]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Logout (Revoke)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/logout",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "logout"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "timestamp", "value": "{{$timestamp}}" },
    { "key": "email", "value": "student@example.com" },
    { "key": "accessToken", "value": "" },
    { "key": "refreshToken", "value": "" }
  ]
}
